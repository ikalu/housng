<ul>
  <% if flash[:notice] %>
    <% flash.each do |name, msg| -%>
      <li><%= content_tag :div, msg, class: name %></li>
    <% end -%>
  <% end %>
</ul>
<% if current_user.admin? %>
  <p>Welcome Admin</p>
  <p><%= link_to "View all users", admin_users_path %> </p>
  <p><%= link_to "View all halls", admin_halls_path %></p>
  <p><%= link_to "Hall Assignments", admin_hall_assignments_path %></p>
  <p><%= link_to "View Applications", admin_applications_path %></p>
<% else %>
  <p>Welcome to your page, please make sure to complete your housing application</p>
  <p><%= link_to "New Application", new_application_path %></p>
<% end %>
