<% if @user %>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li> <%= message.downcase %> </li>
    <% end %>
  </ul>
<% end %>

<% @users.each do |user| %>
  <% if user != current_user %>
    <p>
      <%= user.email %><br />
      <%= toggle_resident_manager_link(user) %>
      <%= toggle_resident_assistant_link(user) %>
      <% if user.staff? %>
        <%= hall_assignment_link(user) %>
      <% end %>
    </p>
  <% end %>
<% end %>
